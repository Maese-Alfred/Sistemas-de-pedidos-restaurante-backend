        {
          "name": "Get Report by Date Range",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has report structure\", function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('totalReadyOrders');",
                  "    pm.expect(response).to.have.property('totalRevenue');",
                  "    pm.expect(response).to.have.property('productBreakdown');",
                  "});",
                  "",
                  "pm.test(\"Product breakdown is an array\", function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.productBreakdown).to.be.an('array');",
                  "});",
                  "",
                  "pm.test(\"Product breakdown items have required fields\", function () {",
                  "    const response = pm.response.json();",
                  "    if (response.productBreakdown.length > 0) {",
                  "        const item = response.productBreakdown[0];",
                  "        pm.expect(item).to.have.property('productId');",
                  "        pm.expect(item).to.have.property('productName');",
                  "        pm.expect(item).to.have.property('quantitySold');",
                  "        pm.expect(item).to.have.property('totalAccumulated');",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
