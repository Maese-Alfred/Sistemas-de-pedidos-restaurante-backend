      "name": "Menu",
      "item": [
        {
          "name": "Get Menu",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response is an array\", function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.be.an('array');",
                  "});",
                  "",
                  "pm.test(\"Products have required fields\", function () {",
                  "    const products = pm.response.json();",
                  "    if (products.length > 0) {",
                  "        pm.expect(products[0]).to.have.property('id');",
                  "        pm.expect(products[0]).to.have.property('name');",
                  "        pm.expect(products[0]).to.have.property('price');",
                  "        pm.expect(products[0]).to.have.property('isActive');",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/menu",
            "description": "Obtiene todos los productos activos del menú."
          },
          "response": []
        }
      ]
