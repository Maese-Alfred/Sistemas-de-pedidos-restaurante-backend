              "mode": "raw",
              "raw": "{\n  \"tableId\": \"YOUR_TABLE_ID\",\n  \"items\": [\n    {\n      \"productId\": \"YOUR_PRODUCT_ID\",\n      \"quantity\": \"YOUR_QUANTITY\",\n      \"note\": \"YOUR_NOTE\"\n    },\n    {\n      \"productId\": \"YOUR_PRODUCT_ID\",\n      \"quantity\": \"YOUR_QUANTITY\"\n    }\n  ]\n}"
